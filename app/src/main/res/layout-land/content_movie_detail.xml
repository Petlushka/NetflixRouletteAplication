<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<RelativeLayout
    android:id="@+id/content_movie_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.geekteam.netflixrouletteaplication.movieDeatils.MovieDetailActivity">
    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:id="@+id/ivPosterDetailMovie"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_toRightOf="@id/ivPosterDetailMovie"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            style="@style/AppTheme.BlackText"
            android:padding="6dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:id="@+id/tvReleaseDetailMovie"/>
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            style="@style/AppTheme.BlackText"
            android:textStyle="bold"
            android:padding="6dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvRatingDetailMovie"/>
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            style="@style/AppTheme.BlackText"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:id="@+id/tvDirectorDetailMovie"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        style="@style/AppTheme.BlackText"
        android:layout_height="wrap_content"
        android:id="@+id/tvSummaryDetailMovie"
        android:paddingTop="16dp"
        android:layout_below="@id/ivPosterDetailMovie"/>
</RelativeLayout>
</ScrollView>